<%= form_for @recipe do |form| %>
<div class="container"> 
  <div class="row">
      <!-- Row start -->
  <div class="row">
    <div class="col-md-12 col-sm-6 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <i class="icon-calendar"></i>
          <h3 class="panel-title">Inputs</h3>
        </div>
       
        <div class="panel-body">
          <form class="form-horizontal row-border" action="#">
            <div class="form-group">
              <div class="col-md-12">
                <div class="row">
                  <div class="col-xs-5">
                    <%= form.text_field :title, :class => "form-control", placeholder: "Recipe Title", required: true %>
                  </div>
                  <div class="col-xs-3">
                    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "select a category", :class => "form-control", required: true) %>
                  </div>
                  <div class="col-xs-4">
                    <%= form.file_field :image, :class => "form-control", required: true %>
                  </div>
                </div>
              </div>
            </div>
            <br><br>
            <div class="form-group">
              <div class="col-md-12">
              <%= form.text_area :description, placeholder: "Recipe Description", :class => "form-control", required: true %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Row end -->
    <div class="col-md-6 col-sm-6 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <i class="icon-calendar"></i>
          <h3 class="panel-title">Essential ingredients for recipe</h3>
        </div>
        
        <div class="panel-body">
          <div class="">
            <%= form.nested_fields_for :ingredients do |ingredient|  %>
              <%= ingredient.text_field :name, :class => "form-control", required: true %><br>
            <%end%>
            <%=  form.add_nested_fields_link :ingredients %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <i class="icon-calendar"></i>
          <h3 class="panel-title">Steps to make recipe</h3>
        </div>
        <div class="panel-body">
          <%= form.nested_fields_for :steps do |step|  %>
          <%= step.text_field :direction, :class => "form-control" %><br>
          <%end%>
          <%=  form.add_nested_fields_link :steps %>
          </select>
        </div>
      </div>
    </div>
  </div>
    <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>