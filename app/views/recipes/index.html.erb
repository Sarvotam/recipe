<div class="container">
<h3><center>Recipes in Pagination form</center></h3>
  <div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-3 col-sm-3">
      <div class="thumbnail">
          <%= link_to image_tag(recipe.image,  style: "height: 320px; width: 100%;"), recipe %>
            <div class="recipe_title"> <%= recipe.title %></div>
      </div>
    </div>
  <% end %>
  </div>
  <div class="row">
    <div class="pagination">
    <%= will_paginate @recipes, renderer:BootstrapPagination::Rails, inner_window:1, outer_window:1 %>
    </div>
  </div>
</div>
